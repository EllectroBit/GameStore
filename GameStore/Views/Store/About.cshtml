@model GameStore.Models.Game

@{
    ViewData["Title"] = Model.Name;
}

    <div class="content_e">
        <div>
            <div id="gameName_e">@Model.Name</div>
            <hr>
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Img))" alt="">
            <div class="gameAttribute" id="gameYear_e"><span>Year:</span> @Model.Year</div>
            <div class="gameAttribute" id="Rating_e"><span>Rating:</span> @(Model.Positive - Model.Negative)</div>
            <div class="gameAttribute" id="Genre"><span>Genre:</span> @Model.Genre</div>
            <div id="BuyBt"><a asp-action="Buy" asp-controller="Store" asp-route-id="@Model.ID">Buy</a></div>
            @if (User.IsInRole("admin"))
            {
                <div id="EditBt"><a asp-action="Edit" asp-controller="Store" asp-route-id="@Model.ID">Edit</a></div>
                <div id="DeleteBt"><a asp-action="Delete" asp-controller="Store" asp-route-id="@Model.ID">Delete</a></div>
            }
            <div class="gameAttribute" id="Description"><span>Description:</span> @Model.Description</div>
        </div>
    </div>